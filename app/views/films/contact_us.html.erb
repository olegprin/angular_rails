

  <head>
    <%= title "Contact Us" %>
    <%= render "home/adversting"%>
  </head>

  <body>
    <div class="layout_inner">
      <div id="layout">
        <div id="navbar_overlay" class="hidden">
        </div>
        <%=render "home/left_side"%>
        <div class="inner">
          <div class="page-header page-header_inline">
            <h1 class="page-header__title page-header__title_inline">Публикации
            </h1>
            <%= form_tag results_path, method: :get, role: 'search', class: "search-form" do %>
              <%= text_field_tag :query, params[:query], class: "search-form__field", placeholder: "Поиск" %>
              <%= submit_tag "Search", name: nil, class: "search-form__button icon_search" %>
            <% end %>
          </div>
          <div class="column-wrapper js-sticky-wrapper">
            <div class="content_left js-content_left">
              <div class="tabs">
                <%=render "home/small_navbar"%>
              </div>
              <div class="posts_list">
                <div class="posts shortcuts_items">
                  <%= bootstrap_form_for @messagestoadministrator, layout: :vertical, label_col: "col-sm-2", control_col: "col-sm-6" do |f| %>
                    <%if user_signed_in?%> 
                      <%= f.text_field :email, value: "#{current_user.email}", size: "40"%>
                    <%else%>
                      <%= f.text_field :name, size: "40"%>
                      <%= f.text_field :telephone, size: "40"%>
                    <%end%> 
                    <%= f.text_field :name,label: "Title", size: "40"%>
                    <%= f.text_area :message, size: "39x5"%>
                    <%= f.submit label: "Create message"%>
                  <%end%>
                </div>
              </div>
            </div>  
            <%=render "home/side_adversting"%>
          </div>
        </div>
      </div>
    </div>
  </body>





































