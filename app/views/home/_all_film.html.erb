
  <head>
    <% title "Все статьти" %>
    <% meta_tag :description, "All article on timeorg blog" %>
    <% meta_tag :keywords, AllTag.first.all_list %>
    <%= render "home/adversting"%>
  </head>

  <body>
    <div class="layout_inner">
      <div id="layout">
        <div id="navbar_overlay" class="hidden">
        </div>
          <%=render "home/left_side"%>
        <div class="inner">  
          <%=render "home/search"%>
        <div class="column-wrapper js-sticky-wrapper">
          <div class="content_left js-content_left">
            <div class="tabs">
              <%=render "home/small_navbar"%>
            </div>
            <div class="posts_list">
              <div class="posts shortcuts_items">
                <%=render partial: "home/articles", locals: {films: @films}%>
                <%=render "home/middle_adwersting"%>
                <%#=render "home/article"%>
              </div>
              <div class="page-nav">
                <ul class="next-prev">  
                  <%if @films.present?%>
                    <%= will_paginate @films, :previous_label => 'Назад', :next_label => 'Вперед' %> 
                  <%end%> 
                </ul>
                <ul id="nav-pages">
                
                </ul>
              </div>
            </div>
          </div>
          <%=render "home/side_adversting"%>
        </div>
      </div>
    </div>
  </body>



















