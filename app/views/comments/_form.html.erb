
     <div class="article">
          <div class="clr"></div>

      
      

          <%=form_for([@commentable, @comment], html: { multipart: true }, :param1 => @commentable, :remote=>true) do |f|%> 
            <ol>
              <%if user_signed_in?%>
                <li>
                  <label for="email">Email Address (required)</label>
                  <%= f.text_field :email, value: "#{current_user.email}", size: 50%>
                </li>
              <%else%>
                <%= f.fields_for :info_attributes do |builders|%>
                    <li>
                      <label for="name">Name (required)</label>
                        <%= builders.text_field :name, size: 50%>
                    </li>
                    <li>
                      <label for="email">Email Address (required)</label>
                       <%= builders.text_field :email, size: 50%>
                    </li>
                <%end%> 
              <%end%>   
          
              <li>
                <label for="message">Your Message</label>
            
                  <%= f.text_area :content, placeholder: "Add comment", size: "49x8"  %>
             
              </li>
              <li>
                <%= f.button t('forms.buttons.create')%>
                <div class="clr"></div>
              </li>
            </ol>
          <%end%>
      </div>