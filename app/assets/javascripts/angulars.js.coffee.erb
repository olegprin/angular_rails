


Blog = angular.module('Blog', ['ngRoute'])
Blog.config(["$routeProvider", ($routeProvider) ->
  # Route for '/post:po'
  $routeProvider.when('/post/:postId', { templateUrl: '<%=asset_path("MainPost.html")%>', controller: 'PostCtrl' } )
  $routeProvider.when('/films/new', { templateUrl: '<%=asset_path("new.html.erb")%>', controller: 'PostCtrl' } )
  # Default
  #$routeProvider.otherwise({ templateUrl: '<%=asset_path("MainIndex.html")%>', #controller: 'IndexCtrl' } )


])



Blog.controller('IndexCtrl', [
  '$scope', '$location','$http'
  ($scope, $location, $http) ->
    $scope.data = 
      posts: [{title: 'Loading posts...', contents: ''}]

    loadPosts = ->
      $http.get('./posts.json').success( (data) ->
        $scope.data.posts = data
        console.log('Successfully loaded posts.')
      ).error( ->
        console.error('Failed to load posts.')
      )

    loadPosts() 
    $scope.filmNew = ->
      $location.url('/films/new')
    $scope.viewPost = (postId)->
      $location.url('/post/'+postId)
])




